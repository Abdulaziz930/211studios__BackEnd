@model LoginViewModel
@{
    Layout = "_AuthLayout";
    ViewData["Title"] = "Login";
}


<div class="card card-primary">
    <div class="card-header"><h4>Login</h4></div>

    <div class="card-body">
        <form method="POST" class="needs-validation" novalidate="">
            <div class="form-group">
                <label asp-for="Email">Email</label>
                <input id="email" asp-for="Email" class="form-control" required>
                <span class="invalid-feedback" asp-validation-for="Email"></span>
            </div>
            <div class="form-group">
                <div class="d-block">
                    <label asp-for="Password" class="control-label">Password</label>
                    <div class="float-right">
                        <a asp-action="RedirectionToResetPassword" class="text-small">
                            Forgot Password?
                        </a>
                    </div>
                </div>
                <input id="password" asp-for="Password" class="form-control" required>
                <span asp-validation-for="Password" class="invalid-feedback"></span>
            </div>

            <div class="form-group">
                <input asp-for="RememberMe">
                <label asp-for="RememberMe">Remember me?</label>
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-primary btn-lg btn-block" tabindex="4">
                    Login
                </button>
            </div>
        </form>
    </div>
</div>



