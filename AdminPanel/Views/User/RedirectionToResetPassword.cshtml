@model ResetPasswordRedirectionViewModel 
@{
    Layout = "_AuthLayout";
    ViewData["Title"] = "Send email for reset password";
}

<div class="card card-primary">
    <div class="card-header"><h4>Send email for reset password</h4></div>
    <div class="card-body">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <form method="POST" class="needs-validation" novalidate="">
            <div class="form-group">
                <label asp-for="Email">Email</label>
                <input id="email" asp-for="Email" class="form-control" required>
                <span class="invalid-feedback" asp-validation-for="Email"></span>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary btn-lg btn-block" tabindex="4">
                    Send
                </button>
            </div>
        </form>
    </div>
</div>

