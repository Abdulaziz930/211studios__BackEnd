
@{
    ViewData["Title"] = "Delete slider item";
    SliderViewModel slider = Model;
}

<div class="section-header">
    <h1>Delete slider item</h1>
</div>
<div class="section-body">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="container">
                    <div class="detail-content" style="padding-top: 20px; padding-bottom: 20px;">
                        <div class="row">
                            <div class="col-md-6">
                                <img src="~/images/@slider.Image" class="img-fluid" />
                            </div>
                            <div class="col-md-6">
                                <h4>Title:</h4>
                                <p>@slider.Title</p>
                            </div>
                        </div>
                    </div>
                    <div class="card-footer text-right">
                        <form method="post">
                            <button class="btn btn-danger">Delete</button>
                            <a asp-action="index" class="btn btn-info">Cancle</a>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

