
@{
    ViewData["Title"] = "Slider item detail";
    SliderViewModel sliderVM = Model;
}

<div class="section-header">
    <h1>Create new slider item</h1>
</div>
<div class="section-body">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="container">
                    <div class="detail-content" style="padding-top: 20px; padding-bottom: 20px;">
                        <div class="row">
                            <div class="col-md-6">
                                <img src="~/images/@sliderVM.Image" class="img-fluid" />
                            </div>
                            <div class="col-md-6">
                                <h4>Title:</h4>
                                <p>@sliderVM.Title</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

