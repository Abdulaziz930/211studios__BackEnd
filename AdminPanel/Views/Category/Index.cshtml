
@{
    ViewData["Title"] = "Categories";
    List<CategoryViewModel> categoriesVM = Model;
}

<div class="section-header">
    <h1>Categories</h1>
</div>
<div class="section-body">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    @if (categoriesVM.Count == 0 || categoriesVM == null)
                    {
                        <div class="alert alert-warning">There are no category yet, please add category</div>
                    }
                    else
                    {
                        <table class="table">
                            <thead>
                                <tr>
                                    <th scope="col">Name</th>
                                    <th scope="col">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var category in categoriesVM)
                                {
                                    <tr>
                                        <td>@category.Name</td>
                                        <td>
                                            <a asp-action="Detail" asp-route-id="@category.Id" class="btn btn-success">Detail</a>
                                            <a asp-action="Update" asp-route-id="@category.Id" class="btn btn-warning">Update</a>
                                            @if (categoriesVM.Count > 1)
                                            {
                                                <a asp-action="Delete" asp-route-id="@category.Id" class="btn btn-danger">Delete</a>
                                            }
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    }
                </div>
                @if (ViewBag.PageCount != 0)
                {
                    <div class="mt-3">
                        <ul class="pagination" style="justify-content: center; align-items: center">
                            @if (ViewBag.Page == 1)
                            {
                                <li class="page-item disabled">
                                    <a class="page-link" asp-action="Index" asp-route-page="@(ViewBag.Page - 1)" tabindex="-1"><i class="fas fa-chevron-left"></i></a>
                                </li>
                            }
                            else
                            {
                                <li class="page-item">
                                    <a class="page-link" asp-action="Index" asp-route-page="@(ViewBag.Page - 1)" tabindex="-1"><i class="fas fa-chevron-left"></i></a>
                                </li>
                            }
                            @for (int i = 1; i <= ViewBag.PageCount; i++)
                            {
                                @if (ViewBag.Page == i)
                                {
                                    <li class="page-item disabled"><a class="page-link" asp-action="Index" asp-route-page="@i">@i</a></li>
                                }
                                else
                                {
                                    <li class="page-item"><a class="page-link" asp-action="Index" asp-route-page="@i">@i</a></li>
                                }
                            }
                            @if (ViewBag.Page == ViewBag.PageCount)
                            {
                                <li class="page-item disabled">
                                    <a class="page-link" asp-action="Index" asp-route-page="@(ViewBag.Page + 1)"><i class="fas fa-chevron-right"></i></a>
                                </li>
                            }
                            else
                            {
                                <li class="page-item">
                                    <a class="page-link" asp-action="Index" asp-route-page="@(ViewBag.Page + 1)"><i class="fas fa-chevron-right"></i></a>
                                </li>
                            }
                        </ul>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

